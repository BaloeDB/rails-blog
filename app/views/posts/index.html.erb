<div class="flex flex-col space-y-4 mx-4 mt-5">
  <% @posts.each do |post| %>
    <div class="p-4 border rounded shadow">
      <h2 class="text-xl font-bold text-blue-600"><%= link_to post.title, post %></h2>
      <p class="text-sm text-gray-500">Created at: <%= post.created_at.strftime("%B %d, %Y") %></p>
      <p class="text-sm text-gray-500">Updated at: <%= post.updated_at.strftime("%B %d, %Y") %></p>
      <p class="text-sm text-gray-500">User: <%= post.user.login %></p>
      <p class="mt-2 text-gray-700"><%= truncate(post.body, length: 100) %></p>
    </div>
  <% end %>
</div>
<div>
  <%= link_to "Create New Post", new_post_path, class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded block w-9/12 mx-auto mt-10 text-center" %>
</div>


